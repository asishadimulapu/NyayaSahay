# =============================================================================
# Indian Law RAG Chatbot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# Choose your LLM provider: "groq", "gemini", "openai", or "openrouter"
LLM_PROVIDER=groq

# Groq API (FAST & FREE!)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# OpenRouter (optional)
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-oss-120b:free

# Google Gemini (optional)
GOOGLE_API_KEY=

# OpenAI (optional)
OPENAI_API_KEY=

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
# Choose: "huggingface" (FREE, local), "gemini", or "openai"
EMBEDDING_PROVIDER=huggingface
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# -----------------------------------------------------------------------------
# PostgreSQL Database (Azure)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://dandy:Asish%402233@asish2233.postgres.database.azure.com:5432/postgres?sslmode=require

# -----------------------------------------------------------------------------
# FAISS Vector Store
# -----------------------------------------------------------------------------
FAISS_INDEX_PATH=./data/faiss_index

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
APP_NAME=Indian Law RAG Chatbot
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# RAG Configuration
# -----------------------------------------------------------------------------
TOP_K_RESULTS=5
CHUNK_SIZE=800
CHUNK_OVERLAP=150
LLM_TEMPERATURE=0
